<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.spring.bean.sang.db.UserMapper">
    <resultMap id="userResultMap" type="com.study.spring.bean.sang.bean.User">
        <result typeHandler="com.study.spring.bean.sang.db.MyDateTypeHandler" column="regTime" javaType="java.util.Date"
                jdbcType="VARCHAR"
                property="regTime"/>
    </resultMap>
    <select id="getUser" resultType="com.study.spring.bean.sang.bean.User">
        select * from user4
    </select>
    <select id="getPerson" resultType="com.study.spring.bean.sang.bean.Person">
        select * from person
    </select>
    <select id="getUser2" resultMap="userResultMap">
        select * from user4
    </select>
    <insert id="insertUser" parameterType="com.study.spring.bean.sang.bean.User">
        INSERT INTO user4(username,password,regTime) VALUES (#{username},#{password},#{regTime,javaType=Date,jdbcType=VARCHAR,typeHandler=com.study.spring.bean.sang.db.MyDateTypeHandler})
    </insert>
    <insert id="insertUser2">
        INSERT INTO user4(username,password,regTime) VALUES (#{username},#{password},#{regTime,javaType=Date,jdbcType=VARCHAR})
    </insert>
    <insert id="insertUser3">
        INSERT INTO user4(username,password,regTime) VALUES (#{username},#{password},#{regTime,typeHandler=com.study.spring.bean.sang.db.MyDateTypeHandler})
    </insert>
    <insert id="insertPerson">
        INSERT INTO person(interest) VALUES (#{interest,typeHandler=com.study.spring.bean.sang.db.MyListTypeHandler})
    </insert>
</mapper>